<%- include('../template/admin_header') %>
<%- include('../template/admin_navbar') %>

<div class="container mt-3">
  <a href="/admin/products/add_product" class="btn btn-sm btn-outline-success mb-2">Adds Product Data</a>
<% if (count > 0) { %>
    
  <table class="table sorting">
    <thead class="black white-text">
      <tr>
        <th scope="col">Product</th>
        <th scope="col">Price</th>
        <th scope="col">Categori</th>
        <th scope="col">Product Img</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      
        <% products.forEach(function(pd){ %>
          <tr id="id_<%= pd._id %>" class="<%= pd.link %>">
            <td><%= pd.title %></td>
            <td><%= pd.price %></td>
            <td><%= pd.categories %></td>
            <td>
                <% if (pd.image == "") { %>
                  <img src="/images/noimage.png" alt="" id="noimage">
                <% }else{ %>
                    <img src="/product_images/<%= pd.images %>" width="150" height="150" alt="" id="image">
                <% } %>
            </td>
            <td><a href="/admin/edit-product/<%= pd._id %>" class="edit">edit</a></td>
            <% if (pd.link == "home") { %>
              <td></td>
            <% } else { %>
              <td><a href="/admin/delete-product/<%= pd._id %>" class="delete confirmDeletion">delete</a></td>
            <% } %>
          </tr> 
        <% }); %>
        
    </tbody>
  </table>

<% } else { %>
    <h3 class="text-center btn btn-block btn-warning disabled text-white">Tidak ada data produk</h3>
<% } %>

</div>

<%- include('../template/admin_footer') %>