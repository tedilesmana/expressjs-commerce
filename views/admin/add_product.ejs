<%- include('../template/admin_header') %>
<%- include('../template/admin_navbar') %>

<!-- Default form contact -->
<div class="card m-5">

    <div class="col-md-12 text-center"><h3 class="font-weight-bold mt-4 text-white bg-dark rounded p-3">ADD NEW PRODUK</h3></div>
    <form class="text-center border border-light p-5" action="/admin/products/add_product" method="post" enctype="multipart/form-data">
        <a href="/admin/products" class="float-left btn btn-sm btn-success mb-3">Back to all produk</a>
        <!-- Title -->
        <input type="text" id="defaultContactFormName" class="form-control mb-4" value="<%= title %>" placeholder="Enter Title" name="title">

        <!-- Desc -->
        <input type="text" id="defaultContactFormEmail" class="form-control mb-4" value="<%= desc %>" placeholder="Enter desc" name="desc">

        <!-- Message -->
        <div class="form-group">
            <label for="">Categories</label>
            <select name="categories" class="form-control">
              <% categories.forEach(function(cat){ %>
                 <option value="<%= cat.link %>"><%= cat.title %></option>
              <% }); %>
            </select>
        </div>

        <!-- Price -->
        <input type="text" id="defaultContactFormName" class="form-control mb-4" value="<%= price %>" placeholder="Enter Price" name="price">

        <!-- Image -->
        <input type="file" class="form-control mb-4" name="image" id="img">
        <input type="hidden"  name="noimage" id="noimage"/>
        <img src="#" alt="" id="imgPreview">

        <!-- Send button -->
        <button class="btn btn-info" type="submit">Send</button>

    </form>
</div>

<script>
    function readURL(input){
        console.log('ok');
        if(input.files && input.files[0]){
            var reader = new FileReader();

            reader.onload = function(e){
                $('#imgPreview').attr('src', e.target.result).width(100).height(100);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $('#img').change(function(){
        readURL(this);
    })
</script>
