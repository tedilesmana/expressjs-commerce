<%- include('../template/header') %>
<%- include('../template/navbar') %>

<% if (typeof carts == "undefined") { %>
  <div class="bg-warning d-block card text-center m-5 p-5 font-italic">
    <h1 class="text-white font-weight-bold border-bottom mb-5 pb-4">KERANJANG KOSONG</h1>
    <h2 class="font-weight-bold text-white">Silahkan tambahkan belanjaan terlebih dahulu !!!</h2>
  </div>

<% }else{ %>

  <% carts.forEach(function(cart){ %>
    
  <!--Main layout-->
  <main class="">
    <div class="container dark-grey-text mt-5">

      <!--Grid row-->
      <div class="row wow fadeIn">

        <!--Grid column-->
        <div class="col-md-6 mb-4">

          <img src="/product_images/<%= cart.image %>"  height="390" class="card-img-top"
                  alt="">

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-6 mb-4">

          <!--Content-->
          <div class="p-4">

            <div class="mb-3">
              <a href="">
                <span class="badge purple mr-1">Category 2</span>
              </a>
              <a href="">
                <span class="badge blue mr-1">New</span>
              </a>
              <a href="">
                <span class="badge red mr-1">Bestseller</span>
              </a>
            </div>

            <p class="lead">
              <b><%= cart.title %></b>
              <div>Harga : <b>Rp.<%= cart.price %></b></div>
            </p>

            <p class="lead font-weight-bold">Description</p>

            <p><%= cart.desc %></p>

            <div class="d-flex justify-content-left">
              <!-- Default input -->
              <input type="number" value="1" aria-label="Search" class="form-control" style="width: 100px">
              <a class="btn btn-primary btn-md my-0 p">Sub Total: 200.000
              </a>
              <a class="btn btn-danger btn-md my-0 p">HAPUS
              </a>

            </div>

          </div>
          <!--Content-->


        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->

    </div>
  </main>
  <!--Main layout-->
  <% }); %>
<% } %>

<div class="bg-light rounded p-3 col-md-3 text-center" id="box-btn">
  <h4 class="p-3 text-danger font-weight-bold">Grand Total : 2000000</h4>
  <a href="" class="btn btn-danger">CLEAR CART</a>
  <a href="" class="btn btn-success">BUY NOW</a>
</div>

<style>
  #box-btn{
    position: fixed;
    right: 20px;
    top: 150px;
  }
</style>

<%- include('../template/footer') %>

